<!DOCTYPE html>
<html>

<head>
	<meta charset="UTF-8">
	<title>회원가입</title>
	<style>
		body {
			margin: 0;
			padding: 0;
			font-family: 'NanumGothic', 'serif';
			color: #403866;
		}

		.container {
			width: 100%;
			height: 400px;
			text-align: center;
		}

		.sub_container {
			position: relative;
			top: 20%;
			margin: 0 auto;
			width: 80%;
			height: 250px;
			display: inline-block;
		}

		.nameform {
			border-radius: 5px;
			/* border: 2px solid #f0f0f0;*/
		}

		#join-form>div {
			margin: 15px 0;
		}

		.font15 {
			font-size: 15px;
			font-weight: 600;
		}

		#join-form .login_box {
			background-color: #e6e6e6;
			height: 40px;
			width: 250px;
			padding-left: 13px;
			border: 1px solid #e6e6e6;
			border-radius: 2px;
		}

		.login_box:focus {
			border: 1px solid #827ffe;
			border-radius: 2px;
			outline: 1px #827ffe solid;
		}

		input::placeholder {
			color: #8f8fa1;
		}

		.submit_b {
			display: inline-block;
			border: none;
			width: 266px;
			padding: 12px 82px;
			background-color: #827ffe;
			color: white;
			border-radius: 2px;
		}

		.submit_b:hover {
			background-color: #403866;
		}

		.join_font {
			font-size: 15px;
			font-weight: 600;
		}
	</style>
	<script>
		function join_message() {
			var username = document.getElementById('username');
			var pwd = document.getElementById('password');
			var conpwd = document.getElementById('conPassword');
			if (username.value == '') {
				alert(username.parentNode.dataset.validate);
				return false;
			}
			if (pwd.value == '') {
				alert(password.parentNode.dataset.validate);
				return false;
			} else if (pwd.value.length < 8) {
				alert("please enter at least 8 characters");
				return false;
			}
			if (conpwd.value == '') {
				alert(conpwd.parentNode.dataset.validate);
				return false;
			} else if (conpwd.value !== pwd.value) {
				alert("Please check the password confirmation value");
				return false;
			} else if (kakaoid.value == '') {
				alert("please enter kakao id");
				return false;
			}
			return true;
		}

		function join() {
			return join_message();
		}
	</script>
</head>

<body>
	<div class="container">
		<div class="sub_container">
			<div class="nameform">
				<div class="name_box">
					<div class="join_font">회원가입</div>
				</div>
				<div class="">
					<form id="join-form" action="#" method="post" onsubmit="return join();">
						<div class="" data-validate="Username is required">
							<input type="text" id="username" class="login_box join_font" name="username"
								placeholder="User id" autofocus>
						</div>
						<div class="" data-validate="Password is required">
							<input type="password" id="password" class="login_box join_font" name="password"
								placeholder="Password">
						</div>
						<div class="" data-validate="Confirm your password">
							<input type="password" id="conPassword" class="login_box join_font" name="conPassword"
								placeholder="Confirm password">
						</div>
						<div class="" data-validate="kakaoid is required">
							<input type="text" id="kakaoid" class="login_box join_font" name="kakaoid"
								placeholder="kakao id">
						</div>
						<div>
							<button type="submit" class="submit_b join_font">가입하기</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</body>

</html>